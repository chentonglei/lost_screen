@import "./../../remax-styles.wxss";
page{
  height: 100%;
  width: 100%;
  background:#F2F2F2;
}
.app {
  width: 100%;
  height: 100%;
  margin:  auto;
}
.top {
  height: 170rpx;
  width: 100%;
  border-bottom:1rpx solid #cdcdcd;
  background:#FFFFFF;
}
.top_title{
  margin-top: 90rpx;
  font-size: 50rpx;
  float: left;
}
.mid{
  height: 100rpx;
  width: 100%; 
  background:#FFFFFF;
  display: inline-block;
}
.mid_left{
  width:50%;
  height: 100%;
  float: left;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
}
.mid_one_off{
  color: #cdcdcd;
  text-align: center;
}
.mid_one_on{
  text-align: center;
  border-bottom:1rpx solid #000000;
}
.content{
  width:90%;
  height: 100%;
  margin: 10rpx auto;
}
.bottom_left_img{
  margin-top: 95rpx;
  margin-left: 30rpx;
  height: 60rpx;
  width: 60rpx;
  float: left;
}
.mid_right{
  float: right;
  display: flex;
  align-items: center;
  height: 100%;
  margin-right: 30rpx;
}
.address_img{
  height: 50rpx;
  width: 50rpx;
}
.content_one{
  margin-top: 40rpx;
  background: #FFFFFF;
  border-radius: 25rpx;
  width: 100%;
  height: 500rpx;
}
.content_one_top{
  padding-top: 20rpx;
  height: 20%;
  width: 80%;
  margin:auto;
}
.content_one_mid{
  color: #8a8a8a;
  font-size: 25rpx;
}
.content_one_time{
float: left;
}
.content_one_school{
float: right;
}
.content_one_bottom{
  width: 80%;
  height: 60%;
  margin: auto;
  background-color: #FDFDF1;
  border-radius: 25rpx;
}
.status_nofind{
  text-align: center;
  margin-right: -70rpx;
  float: right;
  height: 100%;
  width: 25%;
  color: #FFFFFF;
  background-color: #A7C4FE;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.status_find{
  text-align: center;
  margin-right: -70rpx;
  float: right;
  height: 100%;
  width: 25%;
  color: #FFFFFF;
  background-color: #CCCCCC;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}
.comment{
  width: 80%;
  margin: auto;
}
.bottom_img{
  margin-top: 10rpx;
  width: 50rpx;
  height: 50rpx;
  float: right;
}
.content_bottom_title{
  height: 20%;
  width: 80%;
  margin:auto;
  padding-top: 8rpx;
}
.nothing{
  margin: 20rpx auto;
  text-align: center;
}
.box {
  width: 100%;
  margin: 10rpx auto;
  overflow: hidden;
  background: #fff;
  border-radius: 5rpx;
  padding: 5rpx;
  box-sizing: border-box;
}

.r {
  white-space: nowrap;
  animation: 10s loop linear infinite normal;
  display: inline-block;
  vertical-align: top;
  font-size: 26rpx;
  color: #333;
}

@keyframes loop {
  0% {
    transform: translateX(700rpx);
    -webkit-transform: translateX(700rpx);
  }

  100% {
    transform: translateX(-100%);
    -webkit-transform: translateX(-100%);
  }
}

