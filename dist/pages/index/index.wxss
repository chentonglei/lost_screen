page{
  height: 100%;
  width: 100%;
  background:#F2F2F2;
}
.app {
  width: 100%;
  height: 100%;
  margin:  auto;
}
.top {
  height: 170rpx;
  width: 100%;
  border-bottom:1rpx solid #cdcdcd;
  background:#FFFFFF;
}
.top_title{
  margin-top: 90rpx;
  font-size: 50rpx;
  float: left;
}
.mid{
  height: 100rpx;
  width: 100%; 
  background:#FFFFFF;
  display: inline-block;
}
.mid_left{
  width:50%;
  height: 100%;
  float: left;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
}
.mid_one_off{
  color: #cdcdcd;
  text-align: center;
}
.mid_one_on{
  text-align: center;
  border-bottom:1rpx solid #000000;
}
.end{
  width:90%;
  height: 100%;
  margin: 10rpx auto;
}
.bottom_left_img{
  margin-top: 95rpx;
  margin-left: 30rpx;
  height: 60rpx;
  width: 60rpx;
  float: left;
}
.mid_right{
  float: right;
  display: flex;
  align-items: center;
  height: 100%;
  width: 30%;
}
.address_img{
  height: 50rpx;
  width: 50rpx;
}
